<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormContainer">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>


    <style name="DiceFormEditText" parent="FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">250dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="DiceFormButton" parent="FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">52dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:background">@drawable/drawable_button_background</item>
    </style>


</resources>